[Unit]
Description=Celery Worker for Django Issuer Platform
After=network.target redis.service postgresql.service

[Service]
Type=forking
User=dltadmin
Group=dltadmin
WorkingDirectory=/home/dltadmin/django-issuer-platform
Environment="PATH=/home/dltadmin/django-issuer-platform/venv/bin"
EnvironmentFile=/home/dltadmin/django-issuer-platform/.env
ExecStart=/home/dltadmin/django-issuer-platform/venv/bin/celery -A issuer_platform worker \
    --loglevel=info \
    --logfile=/home/dltadmin/django-issuer-platform/logs/celery-worker.log \
    --pidfile=/tmp/celery-worker.pid \
    --concurrency=4
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
KillMode=mixed
TimeoutStopSec=10
Restart=always

[Install]
WantedBy=multi-user.target
